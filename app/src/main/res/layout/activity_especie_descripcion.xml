<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_peso_editar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="250dp"
    tools:context="com.androiddesdecero.reciclerview.PesoEditar">

    <TextView
        android:id="@+id/peso"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:paddingRight="100dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bulbasaur"/>

    <TextView
        android:id="@+id/fecha"
        android:gravity="center"
        android:text="Agua"
        android:paddingRight="250dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/velocidad"
        android:gravity="left"
        android:text="Velocidad: 4"
        android:layout_weight="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ataque"
        android:gravity="center"
        android:text="Ataque: 3"
        android:layout_weight="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/defensa"
        android:gravity="right"
        android:text="Defensa: 2"
        android:paddingHorizontal="20dp"
        android:paddingRight="250dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>